{ pkgs, lib, ... }:
{
  environment.systemPackages = [ pkgs.nssmdns ];

  services.avahi = {
    enable = true;
    nssmdns4 = true;
    publish = {
      enable = true;
      addresses = true;
      domain = true;
      hinfo = true;
      userServices = true;
      workstation = true;
    };
  };
}
